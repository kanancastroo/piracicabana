pipeline {
  agent any

  stages {

    stage('Automatic email notification') {
      steps {
          emailext(
              attachLog: true,
              body: '${CHANGES, showPaths=true, showDependencies=true, format="%a\n%d\n%m\n%p\n%r"}',  
              subject: '$PROJECT_NAME - Build #$BUILD_NUMBER - $BUILD_STATUS', 
              to: 'kanan.silva@scipopulis.com'
              )
      }
    }
   
  }
}